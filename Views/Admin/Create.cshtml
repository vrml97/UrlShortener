@model UrlShortener.ViewModels.CreateUrlMappingViewModel

@{
    ViewData["Title"] = "Create Short URL";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Create New Short URL</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="OriginalUrl" class="form-label"></label>
                            <input asp-for="OriginalUrl" class="form-control" placeholder="https://example.com/your/long/url" />
                            <span asp-validation-for="OriginalUrl" class="text-danger"></span>
                            <div class="form-text">Enter the full URL you want to shorten (including http:// or https://)</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortCode" class="form-label"></label>
                            <input asp-for="ShortCode" class="form-control" placeholder="Leave empty for auto-generation" />
                            <span asp-validation-for="ShortCode" class="text-danger"></span>
                            <div class="form-text">Optional: Custom short code (leave empty to auto-generate)</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Short URL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
