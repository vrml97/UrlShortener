@model UrlShortener.Models.UrlMapping

@{
    ViewData["Title"] = "Delete Short URL";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Short URL</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this short URL? This action cannot be undone and all existing links will stop working.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Short Code:</dt>
                        <dd class="col-sm-9"><code>@Html.DisplayFor(model => model.ShortCode)</code></dd>

                        <dt class="col-sm-3">Short URL:</dt>
                        <dd class="col-sm-9">
                            <a href="/@Model.ShortCode" target="_blank">
                                @(Context.Request.Scheme)://@(Context.Request.Host)/@Model.ShortCode
                            </a>
                        </dd>

                        <dt class="col-sm-3">Original URL:</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.OriginalUrl" target="_blank" class="text-break">
                                @Html.DisplayFor(model => model.OriginalUrl)
                            </a>
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                        <dt class="col-sm-3">Click Count:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Html.DisplayFor(model => model.ClickCount)</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
